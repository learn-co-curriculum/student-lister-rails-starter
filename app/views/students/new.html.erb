<h1>Create a Student</h1>

<% if @student.errors.full_messages %>
  <% @student.errors.full_messages.each do |error_full_message| %>
    <p><%= error_full_message %></p>
  <% end %>
<% end %>

<%= form_for @student, html: { class: 'ui form' } do |f| %>
  <div class='field'>
    <%= f.text_field :name, placeholder: 'Enter student name...' %>
  </div>
  <div class='field'>
    <%= f.text_field :email, placeholder: 'Enter student email...' %>
  </div>
  <div class='field'>
    <%= f.date_field :dob %>
  </div>
  <div class='field'>
    <%= f.collection_select(:cohort_id, Cohort.all, :id, :name) %>
  </div>
  <%= f.submit %>
<% end %>
